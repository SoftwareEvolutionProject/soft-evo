<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/value_measurement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value Measurement" />

    <LinearLayout
        android:id="@+id/value_measurement_values_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--Add the edit texts here-->
    </LinearLayout>

    <TextView
        android:id="@+id/value_measurement_average_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Average : 0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/value_measurement_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:padding="20dp"
            android:text="Add new measure" />

        <Button
            android:id="@+id/value_measurement_remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/value_measurement_add_button"
            android:layout_toEndOf="@+id/value_measurement_add_button"
            android:gravity="top"
            android:padding="20dp"
            android:text="Remove measure" />
    </RelativeLayout>
</LinearLayout>