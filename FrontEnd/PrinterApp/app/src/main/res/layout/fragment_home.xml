<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.app.printerapp.dataviews.HomeFragment">

    <!--Wrapper layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <!--Left side for add shortcuts-->
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:weightSum="2">

            <!--Button layout top-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:id="@+id/add_company_button"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20sp"
                    android:text="Add \n new company"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/add_button_bg" />

                <Button
                    android:id="@+id/add_operator_button"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignParentBottom="true"
                    android:textSize="20sp"
                    android:text="Add \n new operator"
                    android:layout_toLeftOf="@+id/add_company_button"
                    android:background="@drawable/add_button_bg" />

                <Button
                    android:id="@+id/add_project_button"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:textSize="20sp"
                    android:text="Add \n new project"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/add_company_button"
                    android:background="@drawable/add_button_bg" />

            </RelativeLayout>

            <!--Button layout bottom-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">

                    <Button
                        android:id="@+id/add_detail_button"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="20dp"
                        android:textSize="20sp"
                        android:text="Add \n new detail"
                        android:background="@drawable/add_button_bg" />

                    <Button
                        android:id="@+id/add_test_button"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:textSize="20sp"
                        android:text="Add \n new test"
                        android:layout_toRightOf="@id/add_detail_button"
                        android:background="@drawable/add_button_bg" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    
</FrameLayout>
