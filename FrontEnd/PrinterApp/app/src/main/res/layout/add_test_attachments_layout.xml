<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <android.support.constraint.Guideline
        android:id="@+id/attachments_vertical_middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/add_test_materials_attachments_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/attachments_vertical_middle_guideline"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/add_test_add_material_attachment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attach link to materials"
            android:padding="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attached materials:"
            android:textStyle="bold"
            android:layout_margin="7dp"/>
        <!--Add material attachment info here-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_test_prints_attachments_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/attachments_vertical_middle_guideline"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/add_test_add_print_attachment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attach link to prints"
            android:padding="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attached prints:"
            android:textStyle="bold"
            android:layout_margin="7dp"/>
        <!--Add print attachment info here-->
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
